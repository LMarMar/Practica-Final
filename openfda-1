import http.client
import json

headers = {'User-Agent': 'http-client'}
#Conectamos con el servidor
conn = http.client.HTTPSConnection("api.fda.gov")

#Enviar mensaje de solicitud. Queremos 10 productos
conn.request("GET", "/drug/label.json"+'?limit=10',None, headers)

#Obtener respuesta
r1 = conn.getresponse()
print(r1.status, r1.reason)

#Leer contenido del json
drugs_json = r1.read().decode("utf-8")
conn.close()

drugs = json.loads(drugs_json)


#RESULTS tiene los resultados de la b√∫squeda
drugs = drugs['results']
for drug in drugs:
    drug_id = drug['id']
  
    print('id del medicamento: ', drug_id)
 
